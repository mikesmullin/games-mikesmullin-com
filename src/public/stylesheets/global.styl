@import 'nib'
global-reset()

html, body
  margin 0
  padding 0

body
  background black
  color white
  font-family Arial

.clear
  clear both

h1
  font-size 2em
h2
  font-size 1.8em
h1, h2
  font-weight bold
  margin 0 0 1em 0
strong
  font-weight bold
p
  margin 0 0 1em 0

nav
  background #333
  font-size 2em
  overflow hidden // firefox hack. see: https://css-tricks.com/forums/topic/unwanted-top-margin-in-firefox/
  ul
    &.left
      float left
    &.right
      float right
    li 
      float left
      a
        display block
        padding .5em
        color #999
        text-decoration none
        &:hover
          background #444

article
  margin 2em

  &.home
    ul
      li
        display block
        text-align center
        float left
        margin 0 2em 2em 0
        img
          display block
          margin 0 0 .5em 0
          border 1px solid lighten(#333, 0%)
          &:hover
            border 1px solid lighten(#333, 5%)
        a
          display block
          color #999
          text-decoration none
          &:hover
            color #fff
            font-weight bold
          
  &.game
    text-align center
    #unityPlayer, iframe
      margin 4em auto 0 auto
    p
      margin 1em 0
    a
      color lightblue

body.wide iframe
  width 100vw !important
  height 100vh !important
  position fixed
  top 0
  left 0
  margin 0
  z-index 1000
  overflow hidden

.new
  display inline
  background #005916
  color #9bff93
  border-radius 5px
  padding 0.25em 0.5em
  margin 0 0.5em
  font-size 75%