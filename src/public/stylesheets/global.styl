@import 'nib'
global-reset()

html, body
  height 100%

body
  background black
  color white
  font-family Arial

.clear
  clear both

h1
  font-size 2em
h2
  font-size 1.8em
h1, h2
  font-weight bold
  margin 0 0 1em 0
strong
  font-weight bold
p
  margin 0 0 1em 0

nav
  background #333
  font-size 2em
  ul
    &.left
      float left
    &.right
      float right
    li 
      float left
      a
        display block
        padding .5em
        color #999
        text-decoration none
        &:hover
          background #444

article
  margin 2em

  &.home
    ul
      li
        display block
        text-align center
        float left
        img
          display block
          margin 0 0 .5em 0
          border 1px solid lighten(#333, 0%)
          &:hover
            border 1px solid lighten(#333, 5%)
        a
          display block
          color lighten(#333, 0%)
          text-decoration none
          &:hover
            color lighten(#333, 5%)
            text-decoration underline
          
  &.game
    text-align center
    #unityPlayer
      margin 7em auto 0 auto
